{
  "name": "movies-api",
  "version": "1.0.0",
  "description": "REST API made for Alkemy's Node.js Backend Challenge.",
  "repository": "https://github.com/ghnoob/movies-api",
  "author": "ghnoob",
  "license": "GPL 3.0",
  "private": true,
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "migrator": "ts-node ./src/scripts/migrator.ts",
    "prestart": "build",
    "start": "NODE_ENV=production node ./dist/src/index.js",
    "start:dev": "NODE_ENV=development ts-node-dev --respawn ./src/index.ts",
    "start:debug": "NODE_ENV=debug ts-node-dev --transpile-only --respawn --inspect=9229 src/index.ts",
    "prepare": "husky install",
    "test": "NODE_ENV=test mocha --parallel -r ts-node/register \"tests/unit/**/*.spec.ts\"",
    "test:coverage": "nyc --reporter=text yarn test",
    "test:integration": "NODE_ENV=test mocha --parallel -r ts-node/register \"tests/integration/*.integration.spec.ts\""
  },
  "dependencies": {
    "@sendgrid/mail": "7.7.0",
    "bcrypt": "5.0.1",
    "class-transformer": "0.5.1",
    "class-transformer-validator": "0.9.1",
    "class-validator": "0.13.2",
    "cors": "2.8.5",
    "dotenv": "16.0.0",
    "express": "4.17.3",
    "express-winston": "4.2.0",
    "helmet": "5.0.2",
    "jsonwebtoken": "8.5.1",
    "openapi-types": "11.0.0",
    "pagination-apis": "1.0.8",
    "passport": "0.5.2",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "pg": "8.7.3",
    "reflect-metadata": "0.1.13",
    "sequelize": "6.19.0",
    "sequelize-typescript": "2.1.3",
    "swagger-jsdoc": "6.2.1",
    "swagger-ui-express": "4.3.0",
    "typedi": "0.10.0",
    "umzug": "3.1.1",
    "validator": "13.7.0",
    "winston": "3.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/chai": "4.3.1",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/mocha": "9.1.1",
    "@types/node": "17.0.24",
    "@types/passport": "1.0.7",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/proxyquire": "1.3.28",
    "@types/sinon": "10.0.11",
    "@types/sinon-chai": "3.2.8",
    "@types/sinon-express-mock": "1.3.9",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/swagger-ui-express": "4.1.3",
    "@types/validator": "13.7.2",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "chai": "4.3.6",
    "chai-http": "4.3.0",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "husky": "7.0.4",
    "lint-staged": "12.4.0",
    "mocha": "10.0.0",
    "mocked-env": "1.3.5",
    "nyc": "15.1.0",
    "prettier": "2.6.2",
    "proxyquire": "2.1.3",
    "sinon": "14.0.0",
    "sinon-chai": "3.7.0",
    "sinon-express-mock": "2.2.1",
    "ts-node": "10.7.0",
    "ts-node-dev": "1.1.8",
    "typescript": "4.6.3"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "./**/*.ts": "prettier --write"
  }
}
