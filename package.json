{
  "name": "movies-api",
  "version": "1.0.0",
  "description": "REST API made for Alkemy's Node.js Backend Challenge.",
  "repository": "https://github.com/ghnoob/movies-api",
  "author": "ghnoob",
  "license": "GPL 3.0",
  "private": true,
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "build:database": "rm -rf dist && tsc -p ./tsconfig.database-only.json",
    "format": "prettier --write ./src",
    "lint": "eslint --fix ./src",
    "migration:generate": "ts-node ./database/generate-migration.ts",
    "prestart": "build",
    "start": "NODE_ENV=production node ./dist/src/index.js",
    "start:dev": "NODE_ENV=development ts-node-dev --respawn ./src/index.ts",
    "start:debug": "NODE_ENV=debug ts-node-dev --transpile-only --respawn --inspect=9229 src/index.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcrypt": "5.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cors": "2.8.5",
    "dotenv": "16.0.0",
    "express": "4.17.3",
    "express-winston": "4.2.0",
    "helmet": "5.0.2",
    "jsonwebtoken": "8.5.1",
    "openapi-types": "11.0.0",
    "passport": "0.5.2",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "pg": "8.7.3",
    "reflect-metadata": "0.1.13",
    "sequelize": "6.19.0",
    "sequelize-typescript": "2.1.3",
    "swagger-jsdoc": "6.2.1",
    "swagger-ui-express": "4.3.0",
    "typedi": "0.10.0",
    "winston": "3.7.2"
  },
  "devDependencies": {
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/node": "17.0.24",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/swagger-ui-express": "4.1.3",
    "@types/validator": "13.7.2",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "husky": "7.0.4",
    "lint-staged": "12.4.0",
    "prettier": "2.6.2",
    "sequelize-cli": "6.4.1",
    "ts-node": "10.7.0",
    "ts-node-dev": "1.1.8",
    "typescript": "4.6.3"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "./src/**/*.ts": "prettier --write"
  }
}
